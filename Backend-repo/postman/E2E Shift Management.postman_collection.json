{
  "info": {
    "_postman_id": "qa-automation-clean-collection",
    "name": "QA Automation â€“ Shift Management (Clean)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register User",
      "request": {
        "method": "POST",
        "header": [],
        "url": "{{baseUrl}}/api/auth/register",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{randomEmail}}\",\n  \"password\": \"Password123!\",\n  \"name\": \"{{randomName}}\"\n}"
        }
      },
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "const r = Math.floor(Math.random() * 100000);",
              "pm.environment.set('randomEmail', `qa_user_${r}@test.com`);",
              "pm.environment.set('randomName', `QA User ${r}`);"
            ]
          }
        },
        {
          "listen": "test",
          "script": {
            "exec": [
              "const res = pm.response.json();",
              "pm.expect(pm.response.code).to.be.oneOf([200,201]);",
              "pm.environment.set('userId', res.user.id);",
              "pm.environment.set('userEmail', res.user.email);",
              "pm.environment.set('userName', res.user.name);",
              "pm.environment.set('userRole', res.user.role);"
            ]
          }
        }
      ]
    },

    {
      "name": "Login User",
      "request": {
        "method": "POST",
        "header": [],
        "url": "{{baseUrl}}/api/auth/login",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{userEmail}}\",\n  \"password\": \"Password123!\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const res = pm.response.json();",
              "pm.expect(pm.response.code).to.equal(200);",
              "pm.environment.set('userJwtToken', res.token);"
            ]
          }
        }
      ]
    },

    {
      "name": "Login Admin",
      "request": {
        "method": "POST",
        "header": [],
        "url": "{{baseUrl}}/api/auth/login",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{adminEmail}}\",\n  \"password\": \"{{adminPassword}}\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const res = pm.response.json();",
              "pm.expect(pm.response.code).to.equal(200);",
              "pm.environment.set('adminJwtToken', res.token);",
              "pm.environment.set('adminId', res.user.id);",
              "pm.environment.set('adminRole', res.user.role);"
            ]
          }
        }
      ]
    },

    {
      "name": "Create Shift (Admin)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{adminJwtToken}}"
          }
        ],
        "url": "{{baseUrl}}/api/shifts",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"date\": \"{{date}}\",\n  \"startTime\": \"{{startTime}}\",\n  \"finishTime\": \"{{finishTime}}\",\n  \"coordinates\": {\n    \"latitude\": 51.5074,\n    \"longitude\": -0.1278\n  }\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const res = pm.response.json();",
              "pm.expect(pm.response.code).to.equal(201);",
              "pm.environment.set('adminShiftId', res.shift.id);"
            ]
          }
        }
      ]
    },

    {
      "name": "Assign Shift to User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{adminJwtToken}}"
          }
        ],
        "url": "{{baseUrl}}/api/shifts/assign",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"shiftId\": \"{{adminShiftId}}\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.expect(pm.response.code).to.equal(200);",
              "pm.environment.set('shiftId', pm.environment.get('adminShiftId'));"
            ]
          }
        }
      ]
    },

    {
      "name": "Update Shift (Admin)",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{adminJwtToken}}"
          }
        ],
        "url": "{{baseUrl}}/api/shifts/{{adminShiftId}}",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"finishTime\": \"18:00\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.expect(pm.response.code).to.equal(200);"
            ]
          }
        }
      ]
    },

    {
      "name": "User Clock In",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{userJwtToken}}"
          }
        ],
        "url": "{{baseUrl}}/api/shifts/{{shiftId}}/clock-in",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"clockInTime\": \"{{clockInTime}}\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.expect(pm.response.code).to.equal(200);"
            ]
          }
        }
      ]
    }
  ]
}
